.b-signin-modal
  .b-signin
    .b-signin__success
      p Thanks! We'll get back<br/>to you shortly!
      br/
      button.b-signin__success-close Close

    form.b-signin__form action="https://api.integros.com/early_access" method="POST"
      .b-signin__header
        h2 Get early access

      .b-signin__form-element.b-signin__form-element-name
        input type="text" id="registration_name" name="registration[name]" value="" placeholder="Your name" required=""
        label for="registration_name": i.fa.fa-user
        .b-signin__error &nbsp;

      .b-signin__form-element.b-signin__form-element-email
        input type="email" id="registration_email" name="registration[email]" value="" placeholder="E-mail" required=""
        label for="registration_email": i.fa.fa-envelope-o
        .b-signin__error &nbsp;

      .b-signin__form-submit
        button.b-signin__btn-submit type="submit" Submit
